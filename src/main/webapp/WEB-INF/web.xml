<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <!--FileServlet-->
  <servlet>
    <servlet-name>RestFileController</servlet-name>
    <servlet-class>abdul.restApi.rest.RestFileControllerV1</servlet-class>
  </servlet>
  <!--UserServlet-->
  <servlet>
    <servlet-name>RestUserController</servlet-name>
    <servlet-class>abdul.restApi.rest.RestUserControllerV1</servlet-class>
  </servlet>
  <!--EventServlet-->
  <servlet>
    <servlet-name>RestEventController</servlet-name>
    <servlet-class>abdul.restApi.rest.RestEventControllerV1</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RestFileController</servlet-name>
    <url-pattern>/api/v1/files</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RestEventController</servlet-name>
    <url-pattern>/api/v1/events</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>RestUserController</servlet-name>
    <url-pattern>/api/v1/users</url-pattern>
  </servlet-mapping>
</web-app>
